call pathogen#infect() 
filetype plugin indent on

map <F4> <ESC>:w<CR>
map <F5> <ESC>:!./%<CR>
map <F7> <ESC>:nohlsearch<CR>
map <F8> <ESC>:e<CR>
map <F2> <ESC>:bn<CR>
map <F3> <ESC>:bp<CR>

colorscheme slate

set nocompatible

set showfulltag
set showmode
set expandtab
set shiftwidth=4
set softtabstop=4
set showcmd
set incsearch
set hlsearch

set autochdir

set autoindent
set smartindent
set virtualedit=all
set ruler
set autoread
set wrap
